# LPG provider selection
LPG_PROVIDER=mimo_online

# Remote provider (Mimo) settings
LPG_MIMO_BASE_URL=https://your-mimo-endpoint.example
LPG_MIMO_API_KEY=replace-with-your-mimo-api-key
LPG_MIMO_MODEL=mimo-v2-flash

# Optional global provider timeout
LPG_PROVIDER_TIMEOUT=2s

# Routing toggles
LPG_ALLOW_RAW_FORWARDING=false
LPG_CRITICAL_LOCAL_ONLY=true

# Local abstraction provider (OpenAI-compatible; e.g. Ollama/llama.cpp bridge)
LPG_LOCAL_ABSTRACTION_BASE_URL=http://127.0.0.1:11434
LPG_LOCAL_ABSTRACTION_MODEL=qwen2.5:3b
LPG_LOCAL_ABSTRACTION_CHAT_PATH=/v1/chat/completions

# Optional local abstraction auth (uncomment if needed)
# LPG_LOCAL_ABSTRACTION_API_KEY=
# LPG_LOCAL_ABSTRACTION_API_KEY_HEADER=Authorization
# LPG_LOCAL_ABSTRACTION_API_KEY_PREFIX=Bearer

# Optional generic OpenAI-compatible upstream settings (used when LPG_PROVIDER=openai_compatible)
# LPG_UPSTREAM_BASE_URL=https://your-provider.example
# LPG_UPSTREAM_API_KEY=replace-with-api-key
# LPG_UPSTREAM_MODEL=your-model
# LPG_UPSTREAM_API_KEY_HEADER=Authorization
# LPG_UPSTREAM_API_KEY_PREFIX=Bearer
# LPG_UPSTREAM_CHAT_PATH=/v1/chat/completions

# Optional audit path
# LPG_AUDIT_PATH=./audit.log
